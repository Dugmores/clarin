
@model clari.Models.GuestResponse;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/clari.styles.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
        <meta name="viewport" content="width=device-width, initial-content, initial-scale=1.0" />
        <title>RSVP Form</title>
    </head>
    <body>
        <h1 class="text-center bg-primary text-white p-2">RSVP Form</h1>
        <form asp-action="RSVPForm" class="m-2" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Name">Your name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Email">Your email:</label>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Phone">Your phone:</label>
                <input class="form-control" asp-for="Phone" />
            </div>
            <div class="form-group">
                <label asp-for="WillAttend">Will you attend?</label>
                <select asp-for="WillAttend" class="form-control">
                    <option value="">Select an option</option>
                    <option value="true">Yes, I will attend</option>
                    <option value="false">No, I cannot attend</option>
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Submit RSVP</button>
        </form>
    </body>
</html>
