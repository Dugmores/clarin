

@model IEnumerable<clari.Models.GuestResponse>;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <title> All Reponses</title>
    </head>
    <body>
        <h1 class="text-center bg-primary text-white p-2">List of responses</h1>
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Will Attend</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var response in Model)
                {
                    <tr>
                        <td>@response.Name</td>
                        <td>@response.Email</td>
                        <td>@response.Phone</td>
                        <td>@response.WillAttend</td>
                    </tr>
                }
            </tbody>
        </table><br/>
        <a class="btn btn-primary" asp-action="Index">Back to Home</a>
    </body>
</html>