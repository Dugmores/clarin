

@model IEnumerable<Clarins.Models.GuestResponse>;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title> All Reponses</title>
    </head>
    <body>
        <h1>List of responses</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Will Attend</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var response in Model)
                {
                    <tr>
                        <td>@response.Name</td>
                        <td>@response.Email</td>
                        <td>@response.Phone</td>
                        <td>@response.WillAttend</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index">Back to Home</a>
    </body>
</html>